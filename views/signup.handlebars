<form id="signup-form" class="card-body" method= "POST" action="/api/user">
  <div class="form-outline mb-4">
    <label for="username-input-signup" class="form-label text-white">username</label>
    <input name="username" type="text" id="username-input-signup" class="form-control" />
  </div>
  
  <div class="form-outline mb-4">
    <label for="password-input-signup" class="form-label text-white">password</label>
    <input name= "password" type="password" id="password-input-signup" class="form-control" />
  </div>

  <button type="submit" class="btn btn-light">sign up</button>
</form>

